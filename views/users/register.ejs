<%layout('layouts/boilerplate')%>
<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 col-xl-8 col-lg-8 offset-xl-2">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjB8fGNhbXAlMjBpbWFnZXN8ZW58MHx8MHx8fDA%3D" 
                alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" method="POST" class="validate-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label"for="username">Username</label>
                            <input class="form-control"type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good! 
                             </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"for="email">Email</label>
                            <input class="form-control"type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good! 
                             </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"for="password">Password</label>
                            <input class="form-control"type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good! 
                             </div>
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

